---
export interface Props {
	name: string;
	rating: number;
	testimonial: string;
	service: string;
	avatarStyle: string;
	avatarSeed: string;
	date: string;
	isFeatured?: boolean;
}

const { name, rating, testimonial, service, avatarStyle, avatarSeed, date, isFeatured } = Astro.props;

// Generate DiceBear avatar URL
const seed = avatarSeed || name;
const avatarUrl = `https://api.dicebear.com/7.x/${avatarStyle}/svg?seed=${encodeURIComponent(seed)}`;

// Format date
const formattedDate = new Date(date).toLocaleDateString('fr-FR', {
	year: 'numeric',
	month: 'long'
});

// Service labels
const serviceLabels: Record<string, string> = {
	guidance: 'Guidance spirituelle',
	animal: 'Communication animale',
	defunt: 'Contact défunt',
	other: 'Autre'
};

const serviceLabel = serviceLabels[service] || service;

// Generate stars
const fullStars = Math.floor(rating);
const hasHalfStar = rating % 1 !== 0;

// Truncate testimonial for preview
const maxChars = 80;
const isLongTestimonial = testimonial.length > maxChars;
const shortTestimonial = isLongTestimonial ? testimonial.substring(0, maxChars) + '...' : testimonial;
---

<div class={`group relative overflow-hidden rounded-2xl bg-gradient-to-br from-white to-gray-50 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 h-[320px] flex flex-col ${isFeatured ? 'ring-2 ring-primary/30' : ''}`}>
	<!-- Featured badge -->
	{isFeatured && (
		<div class="absolute top-4 right-4 z-10">
			<div class="bg-gradient-to-r from-primary to-secondary text-white text-xs font-semibold px-3 py-1 rounded-full shadow-lg">
				⭐ Coup de cœur
			</div>
		</div>
	)}

	<div class="p-6 flex-1 flex flex-col">
		<!-- Header with avatar and info -->
		<div class="flex items-start gap-4 mb-4 flex-shrink-0">
			<!-- Avatar -->
			<div class="relative flex-shrink-0">
				<div class="w-16 h-16 rounded-full overflow-hidden bg-gradient-to-br from-primary/10 to-secondary/10 p-1 shadow-md ring-2 ring-white">
					<img
						src={avatarUrl}
						alt={`Avatar de ${name}`}
						class="w-full h-full rounded-full bg-white"
					/>
				</div>
				{/* Verified badge */}
				<div class="absolute -bottom-1 -right-1 w-6 h-6 bg-green-500 rounded-full flex items-center justify-center shadow-md">
					<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
					</svg>
				</div>
			</div>

			<!-- Name, rating and date -->
			<div class="flex-1 min-w-0">
				<h3 class="text-lg font-bold text-gray-800 mb-1">{name}</h3>

				<!-- Stars -->
				<div class="flex items-center gap-1 mb-2">
					{Array.from({ length: 5 }).map((_, i) => (
						<svg
							class={`w-5 h-5 ${i < fullStars ? 'text-yellow-400' : i === fullStars && hasHalfStar ? 'text-yellow-400' : 'text-gray-300'}`}
							fill="currentColor"
							viewBox="0 0 20 20"
						>
							<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
						</svg>
					))}
					<span class="text-sm text-gray-600 ml-1">({rating})</span>
				</div>

				<!-- Service tag -->
				<div class="inline-flex items-center gap-1 bg-primary/10 text-primary text-xs font-medium px-2 py-1 rounded-full">
					<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
					</svg>
					{serviceLabel}
				</div>
			</div>
		</div>

		<!-- Testimonial text with fixed height -->
		<div class="relative flex-1 flex flex-col">
			<div class="absolute -left-2 -top-2 text-6xl text-primary/10 font-serif leading-none">"</div>
			<p class="text-gray-700 leading-relaxed pl-6 pr-2 italic relative z-10 flex-1">
				{shortTestimonial}
			</p>
			<div class="absolute -right-2 -bottom-2 text-6xl text-primary/10 font-serif leading-none">"</div>
			
			<!-- Read more button -->
			{isLongTestimonial && (
				<button 
					class="testimonial-read-more mt-3 text-primary hover:text-secondary font-medium text-sm flex items-center gap-1 transition-colors duration-300"
					data-full-text={testimonial}
					data-author={name}
					data-service={serviceLabel}
					data-rating={rating}
					data-date={formattedDate}
					data-avatar={avatarUrl}
				>
					Lire la suite
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
					</svg>
				</button>
			)}
		</div>

		<!-- Footer with date -->
		<div class="mt-4 pt-4 border-t border-gray-100 flex-shrink-0">
			<div class="flex items-center justify-between text-sm text-gray-500">
				<span class="flex items-center gap-1">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
					</svg>
					{formattedDate}
				</span>
				<span class="text-green-600 font-medium flex items-center gap-1">
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
					</svg>
					Vérifié
				</span>
			</div>
		</div>
	</div>
</div>

<!-- Testimonial Modal -->
<div id="testimonial-modal" role="dialog" aria-modal="true" aria-labelledby="modal-author" class="fixed inset-0 z-[9999] bg-black/50 backdrop-blur-sm flex items-center justify-center p-4 opacity-0 pointer-events-none transition-all duration-300">
	<div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto transform scale-95 transition-all duration-300">
		<div class="p-8">
			<!-- Modal Header -->
			<div class="flex items-start justify-between mb-6">
				<div class="flex items-center gap-4">
					<img id="modal-avatar" src="" alt="" class="w-16 h-16 rounded-full bg-gradient-to-br from-primary/10 to-secondary/10 p-1 shadow-md ring-2 ring-white">
					<div>
						<h3 id="modal-author" class="text-xl font-bold text-gray-800"></h3>
						<div class="flex items-center gap-2">
							<div id="modal-stars" class="flex items-center gap-1"></div>
							<span id="modal-rating" class="text-sm text-gray-600"></span>
						</div>
						<div class="inline-flex items-center gap-1 bg-primary/10 text-primary text-xs font-medium px-2 py-1 rounded-full mt-1">
							<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
							</svg>
							<span id="modal-service"></span>
						</div>
					</div>
				</div>
				<button id="modal-close" class="text-gray-400 hover:text-gray-600 transition-colors">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>

			<!-- Modal Content -->
			<div class="relative">
				<div class="absolute -left-2 -top-2 text-6xl text-primary/10 font-serif leading-none">"</div>
				<p id="modal-text" class="text-gray-700 leading-relaxed pl-6 pr-2 italic relative z-10 text-lg"></p>
				<div class="absolute -right-2 -bottom-2 text-6xl text-primary/10 font-serif leading-none">"</div>
			</div>

			<!-- Modal Footer -->
			<div class="mt-6 pt-6 border-t border-gray-100">
				<div class="flex items-center justify-between">
					<span class="flex items-center gap-1 text-sm text-gray-500">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
						</svg>
						<span id="modal-date"></span>
					</span>
					<span class="text-green-600 font-medium flex items-center gap-1 text-sm">
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
						</svg>
						Témoignage vérifié
					</span>
				</div>
			</div>
		</div>
	</div>
</div>

<script define:vars={{ testimonial, name, serviceLabel, rating, formattedDate, avatarUrl }}>
	// Testimonial modal functionality
	document.addEventListener('DOMContentLoaded', () => {
		const modal = document.getElementById('testimonial-modal');
		const modalClose = document.getElementById('modal-close');
		const readMoreButtons = document.querySelectorAll('.testimonial-read-more');

		if (!modal || !modalClose) return;

		function openModal(button: any) {
			const fullText = button.dataset.fullText;
			const author = button.dataset.author;
			const service = button.dataset.service;
			const ratingValue = parseInt(button.dataset.rating || '5');
			const date = button.dataset.date;
			const avatar = button.dataset.avatar;

			// Populate modal content
			const modalAvatar = document.getElementById('modal-avatar') as HTMLImageElement;
			const modalAuthor = document.getElementById('modal-author');
			const modalText = document.getElementById('modal-text');
			const modalService = document.getElementById('modal-service');
			const modalDate = document.getElementById('modal-date');
			const modalRating = document.getElementById('modal-rating');
			const starsContainer = document.getElementById('modal-stars');

			if (modalAvatar && avatar) {
				modalAvatar.src = avatar;
				modalAvatar.alt = `Avatar de ${author}`;
			}
			if (modalAuthor && author) modalAuthor.textContent = author;
			if (modalText && fullText) modalText.textContent = fullText;
			if (modalService && service) modalService.textContent = service;
			if (modalDate && date) modalDate.textContent = date;
			if (modalRating) modalRating.textContent = `(${ratingValue})`;

			// Generate stars
			if (starsContainer) {
				starsContainer.innerHTML = '';
				for (let i = 0; i < 5; i++) {
					const star = document.createElement('svg');
					star.className = `w-5 h-5 ${i < ratingValue ? 'text-yellow-400' : 'text-gray-300'}`;
					star.setAttribute('fill', 'currentColor');
					star.setAttribute('viewBox', '0 0 20 20');
					star.innerHTML = '<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>';
					starsContainer.appendChild(star);
				}
			}

			// Show modal with animation
			modal.classList.remove('opacity-0', 'pointer-events-none');
			modal.classList.add('opacity-100');
			const transformElement = modal.querySelector('.transform');
			if (transformElement) {
				transformElement.classList.remove('scale-95');
				transformElement.classList.add('scale-100');
			}
			
			// Prevent body scroll
			document.body.style.overflow = 'hidden';
		}

		function closeModal() {
			if (modal) {
				modal.classList.add('opacity-0', 'pointer-events-none');
				modal.classList.remove('opacity-100');
				const transformElement = modal.querySelector('.transform');
				if (transformElement) {
					transformElement.classList.add('scale-95');
					transformElement.classList.remove('scale-100');
				}
			}
			
			// Restore body scroll
			document.body.style.overflow = '';
		}

		// Add click handlers
		readMoreButtons.forEach((button) => {
			button.addEventListener('click', () => openModal(button));
		});

		modalClose.addEventListener('click', closeModal);

		// Close modal on outside click
		modal.addEventListener('click', (e: any) => {
			if (e.target === modal) {
				closeModal();
			}
		});

		// Close modal on Escape key
		document.addEventListener('keydown', (e: any) => {
			if (e.key === 'Escape' && modal && !modal.classList.contains('pointer-events-none')) {
				closeModal();
			}
		});
	});
</script>
