---
import Layout from '../../layouts/Layout.astro';
import { getBlogPost, getBlogPosts, urlFor } from '../../lib/sanity';
import { PortableText } from 'astro-portabletext';

export async function getStaticPaths() {
	const posts = await getBlogPosts();
	return posts.map((post: any) => ({
		params: { slug: post.slug.current },
	}));
}

const { slug } = Astro.params;
const post = await getBlogPost(slug);

if (!post) {
	return Astro.redirect('/404');
}

// Format date
const formattedDate = new Date(post.publishedAt).toLocaleDateString('fr-FR', {
	day: 'numeric',
	month: 'long',
	year: 'numeric'
});

// Image URL
const imageUrl = post.mainImage ? urlFor(post.mainImage).width(1200).height(630).url() : null;
const imageAlt = post.mainImage?.alt || post.title;

// SEO meta
const metaTitle = post.seo?.metaTitle || post.title;
const metaDescription = post.seo?.metaDescription || post.excerpt;
const ogImageUrl = post.seo?.ogImage ? urlFor(post.seo.ogImage).width(1200).height(630).url() : imageUrl;

// Extract headings for table of contents
const headings = post.body?.filter((block: any) => 
	block.style && block.style.startsWith('h')
).map((block: any) => {
	const level = parseInt(block.style.replace('h', ''));
	const text = block.children?.map((child: any) => child.text).join('') || '';
	const id = text.toLowerCase().replace(/[^\w\s-]/g, '').replace(/\s+/g, '-');
	return { text, id, level };
}) || [];

// Temporarily remove custom components to isolate issue
---

<Layout 
	title={metaTitle}
	description={metaDescription}
	ogImage={ogImageUrl || '/assets/images/Accueil.webp'}
	ogType="article"
>
	<!-- Article Header -->
	<article class="relative">
		<!-- Hero Image -->
		{imageUrl && (
			<div class="relative w-full h-[60vh] overflow-hidden">
				<img
					src={imageUrl}
					alt={imageAlt}
					class="w-full h-full object-cover object-center"
				/>
				<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>

				<!-- Article header content overlay -->
				<div class="absolute inset-0 flex items-end">
					<div class="container mx-auto px-4 pb-12">
						<div class="max-w-4xl mx-auto">
							<!-- Categories -->
							{post.categories && post.categories.length > 0 && (
								<div class="flex flex-wrap gap-2 mb-4">
									{post.categories.map((cat: any) => {
										const colorClass = cat.color === 'secondary' ? 'bg-secondary'
											: cat.color === 'accent' ? 'bg-accent'
											: 'bg-primary';
										return (
											<span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold ${colorClass} text-white`}>
												{cat.title}
											</span>
										);
									})}
								</div>
							)}

							<!-- Title -->
							<h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-4 drop-shadow-lg">
								{post.title}
							</h1>

							<!-- Meta info -->
							<div class="flex flex-wrap items-center gap-6 text-white/90">
								<div class="flex items-center gap-2">
									{post.author?.image ? (
										<img
											src={urlFor(post.author.image).width(48).height(48).url()}
											alt={post.author.name}
											class="w-10 h-10 rounded-full object-cover border-2 border-white/20"
										/>
									) : (
										<div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white font-semibold border-2 border-white/20">
											{post.author?.name?.charAt(0) || 'C'}
										</div>
									)}
									<span class="font-medium">{post.author?.name || 'Camille Spirit'}</span>
								</div>
								<time datetime={post.publishedAt} class="flex items-center gap-2">
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
									</svg>
									{formattedDate}
								</time>
								<span class="flex items-center gap-2">
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
									5 min de lecture
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		)}

		<!-- Article Content -->
		<div class="container mx-auto px-4 py-16">
			<div class="max-w-6xl mx-auto">
				<div class="grid grid-cols-1 xl:grid-cols-4 gap-8">
					<!-- Main content -->
					<div class="xl:col-span-3">
						<!-- Excerpt -->
						{post.excerpt && (
							<div class="text-xl text-base-content/70 leading-relaxed mb-12 p-6 bg-gradient-to-r from-primary/5 to-secondary/5 rounded-2xl border-l-4 border-primary">
								{post.excerpt}
							</div>
						)}

						<!-- Article body with enhanced styling -->
						<div class="prose prose-lg max-w-none
							prose-headings:font-display prose-headings:font-bold prose-headings:text-base-content
							prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6 prose-h2:text-primary prose-h2:scroll-mt-24
							prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4 prose-h3:text-secondary prose-h3:scroll-mt-24
							prose-h4:text-xl prose-h4:mt-6 prose-h4:mb-3 prose-h4:text-base-content prose-h4:scroll-mt-24
							prose-p:leading-relaxed prose-p:text-base-content/70 prose-p:mb-6
							prose-a:text-primary prose-a:no-underline hover:prose-a:underline
							prose-strong:text-base-content prose-strong:font-semibold
							prose-em:italic
							prose-blockquote:border-l-4 prose-blockquote:border-primary prose-blockquote:bg-primary/5 prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:rounded-r-lg prose-blockquote:italic
							prose-img:rounded-2xl prose-img:shadow-xl
							prose-ul:list-disc prose-ol:list-decimal
							prose-code:bg-base-200 prose-code:text-base-content prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:font-mono
							prose-pre:bg-base-content prose-pre:text-base-100 prose-pre:p-4 prose-pre:rounded-lg prose-pre:overflow-x-auto
						">
							{post.body && <PortableText value={post.body} />}
						</div>

				<!-- Tags -->
						{post.tags && post.tags.length > 0 && (
							<div class="mt-12 pt-8 border-t border-base-300">
								<div class="flex flex-wrap items-center gap-3">
									<span class="font-semibold text-base-content/70">Tags:</span>
									{post.tags.map((tag: string) => (
										<a
											href={`/blog?tag=${tag}`}
